# Use uma imagem base com Debian
FROM debian:latest

# Instalar bash
RUN apt-get update && \
    apt-get install -y bash && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Copiar o script Bash para o container
COPY update_hosts.sh /update_hosts.sh

# Tornar o script execut√°vel
RUN chmod +x /update_hosts.sh

# Definir o comando para rodar o script Bash
USER root
ENTRYPOINT ["/update_hosts.sh"]